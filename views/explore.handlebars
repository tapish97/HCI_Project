<div>
  <div>
    <div
      style="display: flex; justify-content:space-between; align-items:center"
    >
      <a href="/trips" class="btn" style="width: 5%;">
        <button type="button" name="back_button" id="back_button" class="btn">
          <img src="/public/images/back-button.png" alt="Back Button" />
        </button>
      </a>
      <h1>Popular Trip Locations Near You</h1>
      <div style="width: 5%;"></div>
    </div>
  </div>
  <h1>Top Destinations for: {{userLocation}}</h1>
  <p class="text-center">Users in your area frequently travel to these locations</p>
  <div class="container mt-4">
    <div class="row">
      {{#each locations}}
        <div class="card" style="width: 18rem; margin: 6px;"><img
            class="card-img-top"
            src="{{this.img}}"
            width="300"
            height="200"
          />
          <div class="card-body"><h2 class="card-text">{{this.name}}</h2><a
              href="/trips/add?destination={{this.name}}"
              class="btn btn-primary"
            >Create Trip</a></div>
        </div>
      {{/each}}
    </div>
  </div>
</div>